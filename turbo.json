{
	"$schema": "https://turborepo.com/schema.json",
	"globalEnv": ["VITE_APP_BLOG_ADMIN_BASE_URL", "BLOG_ADMIN_BASE_URL"],
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "./dist/**"]
		},
		"lint": {},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": true,
			"persistent": true
		}
	}
}
