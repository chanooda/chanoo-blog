{
	"extends": "tsconfig/react-library.json",
	"compilerOptions": {
		"types": ["./src/query.d.ts"],
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@ui": ["../../packages/ui/src"],
			"@ui/*": ["../../packages/ui/src/*"],
			"ui": ["../../packages/ui/src"],
			"ui/*": ["../../packages/ui/src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
